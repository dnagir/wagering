!!!
%html
  %head
    %title= "#{@title && (@title + ' - ')}Social Wagering"
    = stylesheet_link_tag
    = javascript_include_tag :defaults
    %meta(charset='UTF-8')
    %meta(name="description" content="Social Wagering - bet on the content of web pages")
    %meta(name="keywords" content="Web bets, online wagering, site bets, page bets, site bets, social wagering")
    %meta(name="author" content="Dmytrii Nagirniak, Dmitriy Nagirnyak")

    = stylesheet_link_tag :all
    %script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js')
    /[if lt IE 9]
      %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      %header
        %h1
          %a{:href=>root_path}
            %img{:src=>image_path("logo.png"), :alt=>'Social Wagering - Home'}
          %span.slogan
            Bet the Web!
        %nav
          %a{:href=>rules_path} Rules
          %a{:href=>terms_path} Terms
          %a{:href=>bets_path} Bets
      %section#content
        - if @header
          %h1.caption= @header
        #main
          = yield
        #context= yield(:context)
        .clear
      %footer
        %a{:href=>root_path} Home
        %a{:href=>rules_path} Rules
        %a{:href=>terms_path} Terms
        %a{:href=>bets_path} Bets
